<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".background">


    <LinearLayout

        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_2"
        android:elevation="8dp">

        <TextView
            android:id="@+id/retorno"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="Background"
            android:drawableStart="@drawable/ic_keyboard"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="42dp"
            android:padding="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/Purwa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/senati_web" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SENATI"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computacion e Informatica
"
                        android:textColor="@color/grey_900"
                        android:textSize="13dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-EN CURSO"
                        android:textSize="13dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenInsitut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_logoidat" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDAT"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronica de Celulares"
                        android:textColor="@color/grey_900"
                        android:textSize="13dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2010-2010"
                        android:textSize="13dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/formas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="52dp"
            android:padding="0dp">

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:padding="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFigma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenFigma"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/imprenta_offset" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/fima"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="33dp"
                            android:layout_alignBaseline="@+id/textfima"
                            android:layout_marginTop="-20dp"
                            android:angle="-90"
                            android:progress="100"
                            android:progressTint="@color/blue_800"
                            android:scaleY="2">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/textfima"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="Prensista Offset"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFacil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenUniversity"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_illustrator_vector" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/textcorel"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-20dp"
                            android:progressTint="@color/blue_800"
                            android:scaleY="2"
                            android:angle="-90"
                            android:layout_alignBaseline="@+id/textCorel"
                            android:progress="50">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/textCorel"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="Adobe Ilustrator"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardAdobe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenPhotoshop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_photoshop_cc" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-20dp"
                            android:progressTint="@color/blue_800"
                            android:scaleY="2"
                            android:angle="-90"
                            android:layout_alignBaseline="@+id/textAdobePhotoshop"
                            android:progress="50">

                        </ProgressBar>


                        <TextView
                            android:id="@+id/textAdobePhotoshop"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="20dp"
                            android:text="Adobe Photoshop"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIndesing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenIndesing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_office_vector" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="65dp">

                    <ProgressBar
                        android:id="@+id/textIndesing"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-20dp"
                        android:progressTint="@color/blue_800"
                        android:scaleY="2"
                        android:angle="-90"
                        android:layout_alignBaseline="@+id/textAdobeIndesing"
                        android:progress="100">
                    </ProgressBar>

                    <TextView
                        android:id="@+id/textAdobeIndesing"
                        android:layout_width="286dp"
                        android:layout_height="52dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="Office"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardSketchUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenInsitute"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/soporte_log" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/scketchup"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-20dp"
                            android:progressTint="@color/blue_800"
                            android:scaleY="2"
                            android:angle="-90"
                            android:layout_alignBaseline="@+id/textSketchUp"
                            android:progress="73">

                        </ProgressBar>


                        <TextView
                            android:id="@+id/textSketchUp"
                            android:layout_width="286dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="-20dp"
                            android:text="Soporte TI"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>